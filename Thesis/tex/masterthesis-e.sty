\begin{tabular}{l p{1cm} l}%
  Student ID & & \@studentid\\[5mm]%
  Date of Submission & & \@hizuke\\[5mm]%
  Advisor & & \@advisor\\[5mm]%
\end{tabular}}%
\end{center}%
